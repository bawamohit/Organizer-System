<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" stylesheets="@Message.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.Message.MessageController">
    <VBox>
    <HBox spacing="10.0">
    <TextField fx:id="searchField" prefWidth="80" />
    <Button onAction="#handleNewChatButtonAction" text="+" />
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
    </HBox>
    <ScrollPane fx:id="container" fitToWidth="true" prefHeight="643.0" prefWidth="100">
        <VBox fx:id="chatsContainer" alignment="center">
        </VBox>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
    </ScrollPane>
    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
